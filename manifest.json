{
  "manifest_version": 3,
  "name": "中文词组翻译器",
  "version": "1.0",
  "description": "在页面加载完成后，提取中文词组并使用翻译API翻译后替换",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://translate.googleapis.com/*",
    "https://api.fanyi.baidu.com/*",
    "https://openapi.youdao.com/*",
    "https://mt.aliyuncs.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "images/icon_on.png"
  },
  "options_page": "popup/options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "icons": {
    "16": "images/icon_on.png",
    "48": "images/icon_on.png",
    "128": "images/icon_on.png"
  }
} 